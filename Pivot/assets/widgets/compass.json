{
    "variables":{
        "compassSize": ["data", "size"],
        "compassScale": ["data","scale"],
        "showCompass": ["data", "visible"],
        "compassXPos": ["layout", "x_offset"],
        "compassYPos": ["layout", "y_offset"]
    },
    "contents":{
        "type": "Sprite",
        "format": {
            "type": "Anchored"
        },
        "data": {
            "texture": "compass-spin",
            "scale": 1,
            "anchor": [0.5,1],
            "visible": true,
            "span": 10,
            "cols": 1,
            "frame": 0
        },
        "layout": {
            "x_anchor": "center",
            "y_anchor": "top",
            "y_offset": 0,
            "x_offset": 0
        }
    }
}
