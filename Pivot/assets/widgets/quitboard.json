{
    "variables": {
        "showBoard": ["data", "visible"],
        "boardScale": ["data", "scale"],
        "boardSize": ["data", "size"],
        "boardPrompt": ["children", "label", "data", "text"],
        "boardPromptOption1": ["children", "yes", "data", "variables", "buttonText"],
        "boardPromptOption2": ["children", "no", "data", "variables", "buttonText"]
    },
    "contents": {
        "type": "Image",
        "format": {
            "type": "Anchored"
        },
        "data": {
            "texture": "board",
            "size": [900,600],
            "visible": true,
            "scale": 1,
            "anchor": [0.5,0.5]
        },
        "layout": {
            "x_anchor": "center",
            "y_anchor": "middle"
        },
        "children": {
            "label": {
                "type": "Label",
                "data": {
                    "font": "roboto-smaller",
                    "size": [450,300],
                    "anchor": [0.075,0.35],
                    "text": "Are you sure you want to quit?",
                    "foreground": [255,255,255,255],
                    "background": [0,0,0,0],
                    "halign": "center",
                    "valign": "middle"
                },
                "layout":{
                    "x_anchor": "center",
                    "y_anchor": "middle"
                }
            },
            "yes": {
                "type": "Widget",
                "data": {
                    "key": "quitbuttons",
                    "variables": {
                        "showButton": true,
                        "buttonText": "Resume",
                        "buttonScale": 0.67,
                        "buttonType": "continue"
                    }
                }
            },
            "no": {
                "type": "Widget",
                "data": {
                    "key": "quitbuttons",
                    "variables": {
                        "showButton": true,
                        "buttonXPos": 0.335,
                        "buttonText": "Quit",
                        "buttonScale": 0.67,
                        "buttonType": "quit"
                    }
                }
            },
            "restart": {
                "type": "Widget",
                "data": {
                    "key": "quitbuttons",
                    "variables": {
                        "showButton": true,
                        "buttonXPos": 0.665,
                        "buttonText": "Restart",
                        "buttonScale": 0.67,
                        "buttonType": "restart"
                    }
                }
            },
            "settingoption": {
                "type": "Button",
                "format": {
                    "type": "Anchored"
                },
                "data": {
                    "upnode": "up",
                    "size": [120,100],
                    "anchor": [0, 0],
                    "scale": 1,
                    "visible": true
                },
                "layout":{
                    "x_anchor": "left",
                    "y_anchor": "top",
                    "x_offset": 0,
                    "y_offset": 0
                },
                "children": {
                    "up":{
                        "type": "Image",
                        "data": {
                            "texture": "settingsoption"
                        }
                    }
                }
            }
        }
    }
}
